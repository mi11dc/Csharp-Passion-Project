@model Csharp_Passion_Project.Models.TeamDto
@{
    ViewBag.Title = "Edit Team";
}

<h2>@ViewData["title"]</h2>

<div id="containershow">
    <nav class="my-2">
        <a class="btn btn-secondary navlink" href="/Team">Back To Teams</a>
    </nav>
    <form method="POST" action="/Team/Edit/@Model.Id">
        <div class="inputrow my-2">
            <label for="Name">Name:</label>
            <input type="text" id="Name" name="Name" value="@Model.Name" />
        </div>
        <div class="inputrow my-2">
            <label for="Owner">Onwer Name:</label>
            <input type="text" id="Owner" name="Owner" value="@Model.Owner" />
        </div>
        <input type="hidden" id="FormedOn" name="FormedOn" value="@Model.FormedOn" />
        <div class="inputrow my-2">
            <input class="btn btn-primary" type="submit" value="Update Team" />
        </div>
    </form>
</div>

