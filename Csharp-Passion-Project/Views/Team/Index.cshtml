@model IEnumerable<Csharp_Passion_Project.Models.TeamDto>
@{
    ViewBag.Title = "Team List";
}

<h2>@ViewData["title"]</h2>

<nav class="my-2">
    <a class="btn btn-primary navlink" href="/Team/Create">Add Team</a>
</nav>

<div class="row">
    <div class="col-12">
        <form asp-controller="Student" asp-action="Index">
            <p>
                Search: <input type="text" name="Search" value="@ViewData["Search"]" />
                <input type="submit" value="Search" />
            </p>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table border="1">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Team Name</th>
                    <th>Owner</th>
                    <th>Formed On</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr class="text-center">
                        <td colspan="5">No Data Found</td>
                    </tr>
                }
                @{ int i = 1; }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.Name</td>
                        <td>@item.Owner</td>
                        <td>@item.FormedOn.ToShortDateString()</td>
                        <td>
                            @Html.ActionLink("View", "Details", new { id = @item.Id }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Edit", "Edit", new { id = @item.Id }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Delete", "ConfirmDelete", new { id = @item.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>

                    i++;
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    nav {
        padding-bottom: 1em;
    }
    table {
        width: 100%;
    }

    thead, tbody, tfoot, tr, td, th {
        border-width: 1px;
        padding: 0.25em;
    }
</style>
