@model Csharp_Passion_Project.Models.Team
@{
    ViewBag.Title = "Create Team";
}

<h2>@ViewData["title"]</h2>

<div id="containershow">
    <nav class="my-2">
        <a class="btn btn-secondary navlink" href="/Team">Back To Teams</a>
    </nav>
    <form method="POST" action="/Team/Create">
        <div class="inputrow my-2">
            <label for="Name">Name:</label>
            <input type="text" id="Name" name="Name" />
        </div>
        <div class="inputrow my-2">
            <label for="Owner">Onwer Name:</label>
            <input type="text" id="Owner" name="Owner" />
        </div>
        <div class="inputrow my-2">
            <input class="btn btn-primary" type="submit" value="Create Team" />
        </div>
    </form>
</div>
